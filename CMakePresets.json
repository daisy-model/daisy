{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name" : "unix",
            "hidden" : true,
            "generator" : "Unix Makefiles",
            "cacheVariables" : {
                "COMPILER_OPTIONS_WARNING" : "-Wpedantic;-Wall;-Wextra;-Wvariadic-macros;-Wvla;-Wmissing-declarations;-Wfloat-equal;-Wcast-qual;-Woverloaded-virtual;-Wundef;-Wpointer-arith;-Wwrite-strings;-Wcast-align;-Wmissing-format-attribute;-Wold-style-cast;-Wformat=2;-Winit-self;-Wsign-promo;-Wredundant-decls",
                "COMPILER_OPTIONS_NO_WARNING" : "-Wno-unused-parameter;-Wno-sign-compare;-Wno-mismatched-tags;-Wno-invalid-utf8",
                "COMPILER_OPTIONS_PROFILE" : "-pg",
                "COMPILER_OPTIONS_RELEASE" : "-ffast-math;-fno-finite-math-only",
                "COMPILER_OPTIONS_PORTABLE" : "-mtune=generic",
                "COMPILER_OPTIONS_NATIVE" : "-march=native;-mtune=native",
                "COMPILER_OPTIONS_COVERAGE" : "-O1;--coverage",
                "LINKER_DIRS" : "/usr/local/lib", // For lld on Mac OS
                "LINKER_OPTIONS_COVERAGE" : "--coverage",
                "LINKER_OPTIONS_PORTABLE" : "-static",
                "OS_OPTIONS" : "-D__unix"
            }
        },
        {
            "name" : "coverage",
            "hidden" : true,
            "cacheVariables" : {
                "CMAKE_BUILD_TYPE" : "Coverage"
            }
        },

        {
            "name" : "debug",
            "hidden" : true,
            "cacheVariables" : {
                "CMAKE_BUILD_TYPE" : "Debug"
            }
        },
        {
            "name" : "release",
            "hidden" : true,
            "cacheVariables" : {
                "CMAKE_BUILD_TYPE" : "Release"
            }
        },
        {
            "name" : "portable",
            "hidden" : true,
            "cacheVariables" : {
                "MAKE_PORTABLE" : "ON"
            }
        },
        {
            "name" : "gcc",
            "hidden" : true,
            "cacheVariables" : {
                "CMAKE_CXX_COMPILER" : "g++"
            }
        },
        {
            "name" : "clang",
            "hidden" : true,
            "cacheVariables" : {
                "CMAKE_CXX_COMPILER" : "clang++"
            }
        },

        {
            "name" : "gcc-coverage",
            "inherits" : [ "gcc", "unix", "coverage" ]
        },
        {
            "name" : "gcc-debug",
            "inherits" : [ "gcc", "unix", "debug" ]
        },
        {
            "name" : "gcc-release",
            "inherits" : [ "gcc", "unix", "release" ]
        },
        {
            "name" : "gcc-release-portable",
            "inherits" : [ "gcc", "unix", "release", "portable" ]
        },
        
        {
            "name" : "clang-debug",
            "inherits" : [ "clang", "unix", "debug" ]
        },
        {
            "name" : "clang-release",
            "inherits" : [ "clang", "unix", "release" ]
        }
    ]
}
